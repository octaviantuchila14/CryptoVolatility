<p id="noice"><%= notice %></p>

<h1>Listing Exchange Rates</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Time</th>
      <th>Last</th>
      <th>High</th>
      <th>Low</th>
      <th>Volume</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exchange_rates.each do |exchange_rate| %>
      <tr>
        <td><%= exchange_rate.date %></td>
        <td><%= exchange_rate.time %></td>
        <td><%= exchange_rate.last %></td>
        <td><%= exchange_rate.high %></td>
        <td><%= exchange_rate.low %></td>
        <td><%= exchange_rate.volume %></td>
        <td><%= link_to 'Show', exchange_rate %></td>
        <td><%= link_to 'Edit', edit_exchange_rate_path(exchange_rate) %></td>
        <td><%= link_to 'Destroy', exchange_rate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

