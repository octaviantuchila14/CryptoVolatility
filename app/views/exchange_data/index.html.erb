<p id="notice"><%= notice %></p>

<h1>Listing Exchange Data</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Price</th>
      <th>Reference currency</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exchange_data.each do |exchange_datum| %>
      <tr>
        <td><%= exchange_datum.date %></td>
        <td><%= exchange_datum.price %></td>
        <td><%= exchange_datum.reference_currency %></td>
        <td><%= link_to 'Show', exchange_datum %></td>
        <td><%= link_to 'Edit', edit_exchange_datum_path(exchange_datum) %></td>
        <td><%= link_to 'Destroy', exchange_datum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

